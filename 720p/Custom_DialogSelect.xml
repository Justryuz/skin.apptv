<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1154">
	<onunload>ClearProperty(SelectDialogType,Home)</onunload>
	<defaultcontrol always="true">999</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
			<control type="group">
				<left>337</left>
				<top>220</top>
				<control type="image"><!-- Dialog background -->
					<left>0</left>
					<top>0</top>
					<width>604</width>
					<height>330</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
				<control type="label"><!-- Dialog heading -->
					<left>25</left>
					<top>12</top>
					<width>554</width>
					<height>30</height>
					<align>center</align>
					<label>$VAR[CustomDialogSelectHeading]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="button"><!-- Touch Close button -->
					<left>582</left>
					<top>-10</top>
					<width>32</width>
					<height>32</height>
					<texturefocus>touch-close.png</texturefocus>
					<texturenofocus>touch-close.png</texturenofocus>
					<onclick>Dialog.Close(1154)</onclick>
					<visible>System.GetBool(input.enablemouse)</visible>
				</control>
				<control type="image">
					<left>25</left>
					<top>48</top>
					<width>554</width>
					<height>4</height>
					<texture>separator.png</texture>
				</control>
				<control type="list" id="999">
					<left>25</left>
					<top>60</top>
					<width>554</width>
					<height>250</height>
					<viewtype label="536">list</viewtype>
					<onright>998</onright>
					<onleft>998</onleft>
					<itemlayout height="50">
						<control type="label">
							<left>20</left>
							<top>0</top>
							<width>514</width>
							<height>50</height>
							<label>$INFO[ListItem.Label]</label>
							<font>font11</font>
						</control>
					</itemlayout>
					<focusedlayout height="50">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>554</width>
							<height>50</height>
							<texture border="8">button-default-focus.png</texture>
							<visible>Control.HasFocus(999)</visible>
						</control>
						<control type="label">
							<left>20</left>
							<top>0</top>
							<width>514</width>
							<height>50</height>
							<label>$INFO[ListItem.Label]</label>
							<font>font11</font>
						</control>
					</focusedlayout>
					<content>
						<!-- More Video Info options -->
						<item>
							<label>$LOCALIZE[31680]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>SendClick(movieinformation,10)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),videoinfomore)</visible>
						</item>
						<item>
							<label>$LOCALIZE[31681]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick condition="Container.Content(TVShows)">RunScript(script.artwork.downloader,mode=gui,mediatype=tvshow,dbid=$INFO[ListItem.DBID])</onclick>
							<onclick condition="Container.Content(Movies)">RunScript(script.artwork.downloader,mode=gui,mediatype=movie,dbid=$INFO[ListItem.DBID])</onclick>
							<onclick condition="Container.Content(MusicVideos)">RunScript(script.artwork.downloader,mode=gui,mediatype=musicvideo,dbid=$INFO[ListItem.DBID])</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),videoinfomore) + System.HasAddon(script.artwork.downloader) + [Container.Content(tvshows) | Container.Content(movies) | Container.Content(musicvideos)] + !IsEmpty(ListItem.DBID)</visible>
						</item>
						<item>
							<label>$LOCALIZE[31892]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>RunScript(script.tvtunes,mode=solo)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),videoinfomore) + System.HasAddon(script.tvtunes) + [Container.Content(tvshows) | Container.Content(movies) | Container.Content(musicvideos)]</visible>
						</item>
						<item>
							<label>$LOCALIZE[38023]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>SendClick(movieinformation,7)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),videoinfomore)</visible>
						</item>
						<item>
							<label>$LOCALIZE[31689]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID])</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),videoinfomore) + System.HasAddon(script.libraryeditor) + !IsEmpty(ListItem.DBID)</visible>
						</item>
						<!-- Weather Icon options -->
						<item><!-- Kodi Default -->
							<label>$LOCALIZE[571]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>Skin.Reset(animate-customicons)</onclick>
							<onclick>Skin.Reset(custom-weathericons)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),weathericons)</visible>
						</item>
						<item><!-- Location Static icons -->
							<label>$LOCALIZE[31551]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>Skin.Reset(animate-customicons)</onclick>
							<onclick>Skin.SetPath(custom-weathericons)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),weathericons)</visible>
						</item>
						<item><!-- Location Animated icons -->
							<label>$LOCALIZE[31552]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>Skin.SetBool(animate-customicons)</onclick>
							<onclick>Skin.SetPath(custom-weathericons)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),weathericons)</visible>
						</item>
						<!-- Weather Fanart options -->
						<item><!-- None -->
							<label>$LOCALIZE[231]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>Skin.Reset(background-customweather)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),weatherbackgrounds)</visible>
						</item>
						<item><!-- Set Custom weather background -->
							<label>$LOCALIZE[31553]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>Skin.SetPath(background-customweather)</onclick>
							<visible>StringCompare(Window(Home).Property(SelectDialogType),weatherbackgrounds)</visible>
						</item>
					</content>
				</control>
			</control>
	</controls>
</window>